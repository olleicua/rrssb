            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "order": 1,
                "title": "Show",
                "type": "boolean",
                "default": true
              },
              "auto": {
                "order": 2,
                "showIf": {
                  "buttons.twitter.enabled": true
                },
                "title": "Automatically set sharing text from page contents",
                "type": "boolean",
                "default": true
              },
              "text": {
                "order": 3,
                "showIf": {
                  "buttons.twitter.enabled": true,
