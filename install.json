      }
    ],
    "body": [
      {
        "type": "script",
        "src": "./install/install.js"
      },
      {
        "type": "script",
        "if": "options.buttons.twitter.enabled",
        "src": "./install/templates/twitter.js"
      },
      {
        "type": "script",
        "if": "options.buttons.facebook.enabled",
        "src": "./install/templates/facebook.js"
      },
      {
        "type": "script",
