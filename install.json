      },
      {
        "type": "script",
        "if": "options.buttons.linkedin.enabled",
        "src": "./install/templates/linkedin.js"
      },
      {
        "type": "script",
        "if": "options.buttons.tumblr.enabled",
        "src": "./install/templates/tumblr.js"
      },
      {
        "type": "script",
