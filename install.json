      },
      {
        "type": "script",
        "contents": "INSTALL_RRSSB.init(Eager.createElement(INSTALL_OPTIONS.container), INSTALL_OPTIONS)"
      },
      {
        "type": "script",
        "src": "js/rrssb.min.js",
        "moduleType": "global",
        "depends": {
          "github.com/jquery/jquery:jquery.js": "jQuery"
        }
      }
    ]
  },
  "dependencies": {
    "github.com/jquery/jquery": ">= 1.7.0, <= 1.10.2"
  },
  "options": {
